<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> - <%= dose.ingredient.name %></li>
  <%= link_to "Delete", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
  </ul>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
